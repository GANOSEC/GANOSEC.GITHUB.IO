if ($_SERVER["REQUEST_METHOD"] === "POST") {
    $inputOldPassword = $_POST["old_password"];
    $inputNewPassword = $_POST["new_password"];

    // Load the stored password from the JSON file
    $passwordData = file_get_contents("value.json");
    $passwordJSON = json_decode($passwordData, true);

    if ($inputOldPassword === $passwordJSON["value_password"]) {
        // Old password matches, update to the new password
        $passwordJSON["value_password"] = $inputNewPassword;
        
        // Save the updated password to the JSON file
        file_put_contents("value.json", json_encode($passwordJSON));

        echo "Password updated successfully!";
    } else {
        echo "Old password does not match. Password not updated.";
    }
}
