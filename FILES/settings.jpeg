    $dataFile = 'data.json';

    // Check if the form has been submitted
    if (isset($_POST['number'])) {
        $newNumber = $_POST['number'];

        // Validate the input as a 10-digit number
        if (preg_match('/^\d{1,16}$/', $newNumber)) {
            // Write the updated number to the data file
            file_put_contents($dataFile, $newNumber);

            $message = 'Number has been updated!';
        } else {
            $message = 'Invalid number. Please enter a 1-16 digit number.';
        }
    }

    // Read the current number from the data file
    $currentNumber = file_get_contents($dataFile);
