        <?php
// Retrieve the data from the JSON file
$jsonData = file_get_contents('info.json');
$responses = json_decode($jsonData, true) ?: array();

// Get the current date
$currentDate = new DateTime();
$totalEntriesToday = 0;
$totalEntriesLastWeek = 0;
$totalEntriesLastMonth = 0;
$totalEntriesThisYear = 0;

foreach ($responses as $response) {
    // Get the entry date for each response
    $entryDate = new DateTime($response['EntryDate']);
    
    // Check if the entry date is within the specified time periods
    if ($entryDate->format('Y-m-d') === $currentDate->format('Y-m-d')) {
        $totalEntriesToday++;
    }
    if ($entryDate->diff($currentDate)->days <= 7) {
        $totalEntriesLastWeek++;
    }
    if ($entryDate->diff($currentDate)->days <= 30) {
        $totalEntriesLastMonth++;
    }
    if ($entryDate->format('Y') === $currentDate->format('Y')) {
        $totalEntriesThisYear++;
    }
}
